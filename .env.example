# Telegram Bot Token
# Get this from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Optional: Set to 'production' in production environment
NODE_ENV=development

# Optional: Port for webhook mode (if using webhooks instead of polling)
PORT=3000

# Firebase Admin SDK Configuration (for server-side operations)
# Get these from Firebase Console > Project Settings > Service Accounts > Generate Private Key
FIREBASE_PRIVATE_KEY=your_private_key_here
FIREBASE_CLIENT_EMAIL=your_client_email_here
FIREBASE_DATABASE_ID="your_database_id_here"
FIREBASE_PROJECT_ID="your_project_id_here"
